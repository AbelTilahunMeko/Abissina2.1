<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1400dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1950dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="Ethiopia"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="36sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="5dp"
            android:text="@string/etho"
            android:textAlignment="textStart"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="255dp"
            android:layout_height="300dp"
            android:layout_below="@+id/text1"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:text="@string/factsEth" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imagsec"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text1"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imageViewer1"
                android:layout_width="150dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/coat" />

            <ImageView
                android:id="@+id/imageViewer2"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_below="@+id/imageViewer1"
                app:srcCompat="@drawable/flag" />
        </RelativeLayout>

        <TextView
            android:id="@+id/Addis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagsec"
            android:layout_marginTop="10dp"
            android:text="Addis Ababa, አዲስ አበባ"
            android:textSize="26dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/Addis"
            app:srcCompat="@drawable/addis1" />

        <TextView
            android:id="@+id/addisFact"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/imageView2"
            android:text="@string/addisFact" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/addisFact"
            android:layout_marginTop="16dp"
            android:text="@string/nationalAt"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:text="@string/aboutNation" />


        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/text3" />

        <Button
            android:id="@+id/lyrics"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@id/seekBar"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:text="@string/lyrcis"
            android:textAllCaps="false"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/palyButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/lyrics"
            android:layout_toEndOf="@+id/lyrics"
            app:srcCompat="@mipmap/ic_media_play" />

        <ImageButton
            android:id="@+id/stopButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/palyButton"
            android:layout_marginEnd="15dp"
            app:srcCompat="@mipmap/stop" />
        <TextView
            android:id="@+id/geo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/stopButton"
            android:layout_marginTop="40dp"
            android:text="Ethopia Geolocation"
            android:textSize="26dp"/>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@+id/geo"
            app:srcCompat="@drawable/etiopia" />

    </RelativeLayout>

</ScrollView>