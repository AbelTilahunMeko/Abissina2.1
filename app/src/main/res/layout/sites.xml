<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Sties To See"
            android:textAlignment="center"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/semen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dp"
            android:text="Simien Mountains National Park"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/semenfact"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/semen"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="@string/semenFac"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/imageSwic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/semenfact"
            android:layout_marginTop="15dp"
            android:text="Simem Images"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/imageSwic"
            android:layout_marginTop="60dp"
            android:text="Ehiopia In Image"
            android:textAlignment="center"
            android:textSize="30dp" />


        <ImageSwitcher

            android:id="@+id/imageSwitcher"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/semenfact">

        </ImageSwitcher>

        <Button
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/back"
            android:layout_alignBottom="@+id/back"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@+id/back"
            android:text="Forward" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageSwitcher"
            android:layout_marginStart="88dp"
            android:layout_marginTop="33dp"
            android:text="Back" />
        <TextView
            android:id="@+id/bnf"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/back"
            android:layout_marginTop="30dp"
            android:text="Blue Nile Falls"
            android:textAlignment="center"
            android:textSize="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@+id/bnf"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:text="@string/nileFac"
            android:textSize="16dp"
            android:id="@+id/nilefac"/>

        <ImageView
            android:id="@+id/lower"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/nilefac"
            android:src="@drawable/nile4"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="250dp"
            android:src="@drawable/nile"
            android:layout_below="@+id/lower"/>

    </RelativeLayout>
</ScrollView>



